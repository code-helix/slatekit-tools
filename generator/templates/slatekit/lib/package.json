{
  "name": "conf",
  "description": "Runs common config code for slatekit projects",
  "version": "1.0.0",
  "url": "https://www.slatekit.com",
  "contact": "https://www.slatekit.com",
  "keywords": ["slatekit", "app"],
  "type": "config",
  "actions": [
    { "name": "copy", "type": "Build", "source": "/build.txt"   , "target": "/build.gradle"                },
    { "name": "copy", "type": "Build", "source": "/settings.txt", "target": "/settings.gradle"             },
    { "name": "copy", "type": "Code" , "source": "/src/Lib.txt" , "target": "/src/main/kotlin/${app.packagePath}/Lib.kt" }
  ],
  "dependencies": {
    "common": "1.0.0"
  }
}